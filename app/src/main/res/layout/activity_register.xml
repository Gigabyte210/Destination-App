<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dest_green"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="101dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/icon" />

    <Space
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="Arial"
        android:text="Register an account"
        android:textColor="@color/dest_blue"
        android:layout_marginBottom="35dp"
        android:textSize="35sp"/>

    <Space
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <EditText
        android:id="@+id/edUserName"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_rounded_button"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/email_blue"
        android:drawablePadding="10dp"
        android:hint="Enter Email Address"
        android:textColor="@color/dest_green"
        android:backgroundTint="@color/white"
        android:layout_gravity="center_horizontal"
        android:ems="16"/>

    <Space
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <EditText
        android:id="@+id/edPassword"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_rounded_button"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/password_blue"
        android:drawablePadding="10dp"
        android:hint="Enter Password"
        android:textColor="@color/dest_green"
        android:backgroundTint="@color/white"
        android:layout_gravity="center_horizontal"
        android:ems="16"/>

    <Space
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="225dp"
        android:layout_height="58dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/dest_blue"
        android:text="Register"
        android:textColor="@color/white" />

    <Space
        android:layout_width="30dp"
        android:layout_height="30dp"/>

</LinearLayout>